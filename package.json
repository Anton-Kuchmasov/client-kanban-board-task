    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.1.1",
    "husky": "^9.0.11",
    "prettier": "3.2.5",
    "sass": "^1.71.1",
    "stylelint": "^16.2.1",
