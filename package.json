    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "redux": "^5.0.1",
    "stylelint-no-unused-selectors": "^1.0.40"
  },
  "htmllint --rc  ./node_modules/@mate-academy/htmllint-config/.htmllintrc": {
    "extends": "./node_modules/@mate-academy/htmllint-config/.htmllintrc"
